{
	"name": "nestjs-template",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "pnpm env:dev -- nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "pnpm env:test -- jest --config ./test/jest-e2e.js",
		"env:dev": "dotenv -e .env.development.local",
		"env:test": "dotenv -e .env.test.local",
		"migration:gen": "pnpm drizzle-kit generate:pg",
		"migration:run": "pnpm env:dev -- pnpm tsx src/db/utils/migrate.ts",
		"migration:run:test": "pnpm env:test -- pnpm tsx src/db/utils/migrate.ts",
		"db:drop": "pnpm env:dev -- pnpm tsx src/db/utils/drop.ts",
		"db:seed": "pnpm env:dev -- pnpm tsx src/db/utils/seed.ts"
	},
	"dependencies": {
		"@anatine/zod-nestjs": "^2.0.8",
		"@anatine/zod-openapi": "^2.2.5",
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"drizzle-orm": "^0.30.7",
		"openapi3-ts": "^4.3.1",
		"postgres": "^3.4.4",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/swagger": "^7.3.1",
		"@nestjs/testing": "^10.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"dotenv-cli": "^7.4.1",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.42.0",
		"eslint-config-love": "^44.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^12.0.0",
		"eslint-plugin-unused-imports": "^3.1.0",
		"jest": "^29.5.0",
		"jest-mock-extended": "^3.0.6",
		"prettier": "^3.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.7.2",
		"typescript": "^5.1.3"
	}
}
